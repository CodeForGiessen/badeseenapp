<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="de.codefor.giessen.Badeseenapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Badeseenapp</name>
  <description>
  	Mit der Badeseenapp kannst du die hessischen Badeseen erkunden und wichtig Informationen wie Bakterienbelastung oder EU-Badeseebewertung abrufen.
  </description>
  <author email="vew-dev@posteo.de" href="http://codefor.de/giessen">
        Code for Germany - OK Lab Gie√üen
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="SplashScreenDelay" value="10000"/>
